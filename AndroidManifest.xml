<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tubs.ibr.dtn.ruralexplorer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <!-- Required by Google Maps -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The following two permissions are not required to use
	     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- To communication with the DTN service we need the permission to do so -->
    <uses-permission android:name="de.tubs.ibr.dtn.permission.DTN_COMMUNICATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_play_api_key" />

        <activity
            android:name="de.tubs.ibr.dtn.ruralexplorer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="de.tubs.ibr.dtn.intent.DTNAPP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name="de.tubs.ibr.dtn.ruralexplorer.backend.CommService" />

        <receiver
            android:name="de.tubs.ibr.dtn.ruralexplorer.backend.DtnIntentReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="de.tubs.ibr.dtn.permission.DTN_SERVER" >

            <!-- Add intent filter for notification of incoming bundles -->
            <intent-filter>
                <action android:name="de.tubs.ibr.dtn.intent.RECEIVE" />

                <category android:name="de.tubs.ibr.dtn.ruralexplorer" />
            </intent-filter>
            <!-- Add intent filter for status reports generated by the DTN service -->
            <intent-filter>
                <action android:name="de.tubs.ibr.dtn.intent.STATUS_REPORT" />

                <category android:name="de.tubs.ibr.dtn.ruralexplorer" />
            </intent-filter>
        </receiver>

        <activity
            android:name="de.tubs.ibr.dtn.ruralexplorer.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="de.tubs.ibr.dtn.ruralexplorer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tubs.ibr.dtn.ruralexplorer.MainActivity" />
        </activity>

        <service
            android:name="de.tubs.ibr.dtn.ruralexplorer.backend.LocationService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name="de.tubs.ibr.dtn.ruralexplorer.NodeInfoActivity"
            android:label="@string/title_activity_node_info"
            android:parentActivityName="de.tubs.ibr.dtn.ruralexplorer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tubs.ibr.dtn.ruralexplorer.MainActivity" />
        </activity>
    </application>

</manifest>